-- Test function _timescaledb_functions.create_chunk_replica_table
\set ON_ERROR_STOP 0
SELECT _timescaledb_functions.create_chunk_replica_table(NULL, 'data_node_1');
ERROR:  chunk cannot be NULL
SELECT _timescaledb_functions.create_chunk_replica_table('_timescaledb_internal._dist_hyper_X_X_chunk', NULL);
ERROR:  data node name cannot be NULL
SELECT _timescaledb_functions.create_chunk_replica_table(1234, 'data_node_1');
ERROR:  oid "1234" is not a chunk
SELECT _timescaledb_functions.create_chunk_replica_table('metrics_int', 'data_node_1');
ERROR:  relation "metrics_int" is not a chunk
SELECT _timescaledb_functions.create_chunk_replica_table('conditions', 'data_node_1');
ERROR:  relation "conditions" is not a chunk
SELECT _timescaledb_functions.create_chunk_replica_table('_timescaledb_internal._hyper_X_X_chunk', 'data_node_1');
ERROR:  chunk "_hyper_X_X_chunk" doesn't belong to a distributed hypertable
SELECT _timescaledb_functions.create_chunk_replica_table('_timescaledb_internal._dist_hyper_X_X_chunk', 'data_node_2');
ERROR:  chunk "_dist_hyper_X_X_chunk" already exists on data node "data_node_2"
SELECT _timescaledb_functions.create_chunk_replica_table('_timescaledb_internal._dist_hyper_X_X_chunk', 'data_node_2');
ERROR:  relation "_timescaledb_internal._dist_hyper_X_X_chunk" does not exist at character 58
SELECT _timescaledb_functions.create_chunk_replica_table('_timescaledb_internal._dist_hyper_X_X_chunk', 'data_node_4');
